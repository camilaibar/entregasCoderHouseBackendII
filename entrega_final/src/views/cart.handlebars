<div class="cart-container">
    <h2>Your Shopping Cart</h2>

    {{#if cart.items.length}}
        <div class="cart-items">
            {{#each cart.items}}
                <div class="cart-item">
                    <h3>{{this.name}}</h3>
                    <p>Quantity: {{this.quantity}}</p>
                    <p>Price: ${{this.price}}</p>
                    <p>Subtotal: ${{multiply this.price this.quantity}}</p>
                    <button class="remove-item-btn" data-id="{{this._id}}">Remove</button>
                </div>
            {{/each}}
        </div>

        <div class="cart-summary">
            <p>Total: ${{cart.total}}</p>
            <a href="/api/v1/carts/{{cart._id}}/purchase" class="checkout-btn">Proceed to Checkout</a>
        </div>
    {{else}}
        <p>Your cart is empty. Go to <a href="/hbs/products" class="products-link">Products</a> to add items.</p>
    {{/if}}

    <!-- Botones de navegaciÃ³n -->
    <div class="nav-buttons">
        <a href="/hbs/products" class="nav-button">Products</a>
        <a href="/hbs/profile" class="nav-button">Profile</a>
        <a href="/api/v1/user/logout" class="nav-button logout-button">Logout</a>
    </div>
</div>